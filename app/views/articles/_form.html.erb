<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow px-5 pt-5 pb-2 mb-3 rounded bg-secondary text-white form-new-edit", local: true) do |f| %> 
        <div class="form-group row form-row">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row form-row">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article"%>
          </div>
        </div>

        <div class="form-group row form-row">
          <%= f.label :category, "Categories", class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name,
            {prompt: "Select category for your article (can be empty, press ctrl/cmd to select multiple)"},
            {multiple: true, size: 3, class: "custom-select shadow rounded"}) %>
          </div>
        </div>

        <div class="form-group row form-row justify-content-center">
          <%= f.submit "Submit", class: "btn btn-outline-light btn-lg col-3 articles-buttons mb-2" %>
        </div>
        <div class="form-group row form-row justify-content-center">
          <%= link_to 'Cancel and return to article listing', articles_path, class: "text-info"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
