<div class="container">
  <div class="row justify-content-center" id="">
    <div class="col-10">
      <%= render 'shared/errors' %>

      <%= form_with(model: @article, class: "shadow px-5 pt-5 pb-2 mb-3 rounded bg-secondary text-white", local: true) do |f| %> 
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article"%>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg col-3" %>
        </div>
        <div class="row justify-content-end pr-2">
          <%= link_to 'Cancel and return to article listing', articles_path, class: "text-info"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
