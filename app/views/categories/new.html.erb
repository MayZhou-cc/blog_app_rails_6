<h1 class="text-center mt-4">Create a New Category</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow px-5 pt-5 pb-2 mb-3 rounded bg-secondary text-white form-new-edit", local: true) do |f| %> 
        <div class="form-group row form-row">
          <%= f.label :name, "Category name", class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>

        <div class="form-group row form-row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg col-3 articles-buttons mb-2" %>
        </div>
        <div class="form-group row form-row justify-content-center">
          <%= link_to 'Cancel and return to article listing', articles_path, class: "text-info"%>
        </div>
      <% end %>
    </div>
  </div>
</div>

